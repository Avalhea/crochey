{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Started_at</th>
                <td>{{ project.startedAt ? project.startedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Finished_at</th>
                <td>{{ project.finishedAt ? project.finishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ project.imageUrl }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ project.Status.value }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    {% if project.tags|length > 0 %}
                        <ul>
                            {% for tag in project.tags %}
                                <li>{{ tag.label }}</li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>No tags</p>
                    {% endif %}
                    <a href="{{ path('app_tag_by_project', {'id': project.id}) }}">Manage Tags</a>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_project_index') }}">back to list</a>

    <a href="{{ path('app_project_edit', {'id': project.id}) }}">edit</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
